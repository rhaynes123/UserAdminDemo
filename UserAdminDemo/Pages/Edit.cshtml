@page
@using UserAdminDemo.Models
@model UserAdminDemo.Pages.EditModel

@{ ViewData["Title"] = "Edit"; }

<h1>Edit</h1>

<h4>Profile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Profile.Role" class="control-label"></label>
                <select asp-for="Profile.Role" class="form-control" asp-items="Html.GetEnumSelectList<Role>()"></select>
                <span asp-validation-for="Profile.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.CreatedAt" class="control-label"></label>
                <input asp-for="Profile.CreatedAt" class="form-control" />
                <span asp-validation-for="Profile.CreatedAt" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Profile.Id" />
            <div class="form-group">
                <label asp-for="Profile.UserName" class="control-label"></label>
                <input asp-for="Profile.UserName" class="form-control" />
                <span asp-validation-for="Profile.UserName" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Profile.Email" class="control-label"></label>
                <input asp-for="Profile.Email" class="form-control" />
                <span asp-validation-for="Profile.Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Profile.PhoneNumber" class="control-label"></label>
                <input asp-for="Profile.PhoneNumber" class="form-control" />
                <span asp-validation-for="Profile.PhoneNumber" class="text-danger"></span>
            </div>
          
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Profile.TwoFactorEnabled" /> @Html.DisplayNameFor(model => model.Profile.TwoFactorEnabled)
                </label>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
